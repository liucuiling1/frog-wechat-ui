.frog-box {
  font-family: PingFangSC-Regular, PingFang SC;
}

.frog-input {
  padding: 0 60rpx;
  box-sizing: border-box;
  background: #fff;
}

.frog-line {
  width: 100%;
  height: 108rpx;
  border-bottom: 1px solid rgba(187, 187, 187, 0.15);
  display: flex;
  align-items: center;
}

.frog-name {
  width: 100%;
  height: 80rpx;
  font-size: 26rpx;
  color: #595F6D;
  background: #F8F8F8;
  padding: 0 60rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
}

.frog-title {
  font-size: 28rpx;
  color: #0C0C22;
  min-width: 180rpx;
  margin-right: 40rpx;
  letter-spacing: 2rpx;
}

.frog-input-style {
  width: 100%;
  height: 90rpx;
  font-size: 28rpx;
  color: #0C0C22;
}

.frog-input-placeholder {
  font-size: 28rpx;
  color: rgba(12, 12, 34, 0.5);
}

.frog-type-text {
  width: 100%;
  height: 110rpx;
  padding: 0 60rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  background: #fff;
  font-size: 28rpx;
  color: #0C0C22;
}

.frog-type-image {
  width: 100%;
  height: 200rpx;
  padding: 40rpx 60rpx;
  box-sizing: border-box;
  display: flex;
  background: #fff;
}

.frog-type-image-title {
  font-size: 28rpx;
  color: #0C0C22;
  min-width: 180rpx;
  margin-right: 40rpx;
}

.frog-img-box {
  width: 120rpx;
  height: 120rpx;
  background: rgba(187, 187, 187, 0.3);
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
}

.frog-img {
  width: 40rpx;
  height: 40rpx;
  background: 100% 100%;
}

.frog-absolute {
  position: absolute;
  top: -14rpx;
  right: -14rpx;
  width: 28rpx;
  height: 28rpx;
  background: 100% 100%;

}