/* type=='text' */
.list {
  width: 100%;
  height: 80rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #fff;
}

.list-name {
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(12, 12, 34, 0.5);
}

.list-value {
  font-size: 28rpx;
  font-weight: 400;
  color: rgb(12, 12, 34);
}

/* type=='arrowIcon' */
.arrowIcon-items {
  width: 100%;
  height: 140rpx;
  display: flex;
  align-items: center;
  background-color: #ffffff;
  padding: 0 60rpx;
  box-sizing: border-box;
}

.arrowIcon-left-icon {
  width: 44rpx;
  height: 40rpx;
  background-size: 100% 100%;
  margin-right: 40rpx;
}

.arrowIcon-right {
  border-bottom: 1px solid rgba(248, 248, 248, 1);
  width: 100%;
  height: 140rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.arrowIcon-right-text {
  color: #0C0C22;
  font-size: 32rpx;
}

.arrowIcon-right-icon {
  width: 12rpx;
  height: 24rpx;
  background-size: 100% 100%;
}